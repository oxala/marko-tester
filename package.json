{
  "name": "marko-tester",
  "version": "5.2.1",
  "description": "Assist Marko components unit/client testing",
  "repository": {
    "type": "git",
    "url": "git@github.corp.ebay.com:SellerHub/marko-tester.git"
  },
  "main": "./source/",
  "scripts": {
    "jscs": "./node_modules/.bin/jscs source test",
    "lint": "./node_modules/.bin/jshint source test --exclude source/generated-tests",
    "unit-test": "./node_modules/.bin/mocha test/marko-tester.config.js $(find test -name '*.spec.js') --ui bdd --reporter spec --check-leaks",
    "test": "npm run jscs && npm run lint && npm run unit-test",
    "clean": "rm -rf .beans .cache source/generated-tests",
    "postinstall": "if [ \"$NODE_ENV\" == \"TEST\" ]; then npm run test && npm; fi",
    "bump": "sh ./tasks/bump.sh"
  },
  "precommit": [
    "test"
  ],
  "keywords": [
    "marko",
    "test",
    "marko-tester"
  ],
  "author": "Ryshkov, Gleb <gryshkov@ebay.com>",
  "license": "ISC",
  "dependencies": {
    "app-module-path": "^2.0.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "fs-extra": "^0.30.0",
    "glob": "^7.0.5",
    "html-normalizer": "^6.0.0",
    "i18n-ebay": "^0.3.17",
    "istanbul": "^0.4.4",
    "jquery": "^2.2.3",
    "jscs": "^3.0.7",
    "jsdom": "^9.2.0",
    "jshint": "^2.9.3",
    "lasso": "^2.4.1",
    "lasso-less": "^2.1.2",
    "lasso-marko": "^2.0.4",
    "lodash": "^4.13.1",
    "marko": "^3.5.0",
    "marko-widgets": "^6.1.1",
    "mocha": "^2.4.5",
    "rewire": "^2.5.2",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0"
  },
  "devDependencies": {
    "pre-commit": "^1.1.3"
  }
}
